%table.table.table-hover
  %thead
    %tr
      %th Name
      %th Username
      %th Email
      %th Actions
  - @users.each do |user|
    %tr
      %td= user.full_name
      %td= user.username
      %td= user.email
      %td
        = link_to "View", user, class: 'btn btn-default btn-xs'
        - if current_user and current_user.has_role? :admin
          = link_to "Edit", edit_user_path(user), class: 'btn btn-default btn-xs'
          = link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger btn-xs'
